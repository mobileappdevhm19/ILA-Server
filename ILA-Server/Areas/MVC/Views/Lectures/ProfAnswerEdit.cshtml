@model ILA_Server.Models.ProfAnswer

@{
    ViewData["Title"] = "ProfAnswerEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Professor Answer Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProfAnswerEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Answer" class="control-label"></label>
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProfQuestionDetails" asp-route-id="@Model.ProfQuestionId">Back to Question</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
