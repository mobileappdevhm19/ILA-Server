@model ILA_Server.Models.Question

@{
    ViewData["Title"] = "QuestionEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Question</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="QuestionEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PointedQuestion" class="control-label"></label>
                <input asp-for="PointedQuestion" class="form-control" />
                <span asp-validation-for="PointedQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
